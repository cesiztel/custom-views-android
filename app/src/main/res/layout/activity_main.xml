<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.cesiztel.custom_views.MainActivity">

    <com.example.cesiztel.custom_views.widgets.LikeSelector
        android:id="@+id/likes_compound_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"/>

    <com.example.cesiztel.custom_views.widgets.CounterSelector
        android:id="@+id/counter_compound_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        custom:drawableUp="@drawable/ic_thumb_up"
        custom:drawableDown="@drawable/ic_thumb_down"/>

</LinearLayout>
